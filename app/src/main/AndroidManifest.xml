<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Core permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Required for apps targeting Android 13 (API 33) or higher that use Advertising ID -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <!-- Camera hardware is optional -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Queries for Google Play Services and other apps -->
    <queries>
        <!-- For Google Sign-In / Auth -->
        <intent>
            <action android:name="com.google.android.gms.auth.GOOGLE_SIGN_IN" />
        </intent>
        <!-- For Chrome custom tabs or opening browser -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
        <!-- Specific package for GMS -->
        <package android:name="com.google.android.gms" />
        <package android:name="com.android.vending" />
        <package android:name="com.android.chrome" />
    </queries>

    <application
        android:name=".AIApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AIBackgroundRemover"
        android:usesCleartextTraffic="true"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="33">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deep links (Firebase Auth / web auth callbacks) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="aiphotostudio.co.uk"
                    android:pathPrefix="/__/auth" />
                <data
                    android:scheme="https"
                    android:host="aiphotostudio.co.uk"
                    android:pathPrefix="/auth" />

                <data
                    android:scheme="https"
                    android:host="aiphotostudio.co"
                    android:pathPrefix="/__/auth" />
                <data
                    android:scheme="https"
                    android:host="aiphotostudio.co"
                    android:pathPrefix="/auth" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AIBackgroundRemover.NoActionBar" />

        <activity
            android:name=".GalleryActivity"
            android:exported="false"
            android:label="@string/gallery" />

        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/settings" />

        <activity
            android:name=".TermsActivity"
            android:exported="false"
            android:label="@string/terms_of_service" />

        <activity
            android:name=".PrivacyActivity"
            android:exported="false"
            android:label="@string/privacy_policy" />

        <activity
            android:name=".WebPageActivity"
            android:exported="false" />

        <!-- FileProvider for camera photo capture + sharing local files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>
