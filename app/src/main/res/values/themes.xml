<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.AIBackgroundRemover" parent="Theme.Material3.Light.NoActionBar">
        <!-- Navy Blue Background -->
        <item name="android:windowBackground">@color/brand_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- White Text -->
        <item name="android:textColorPrimary">@color/brand_text</item>
        <item name="android:textColor">@color/brand_text</item>
        <item name="android:editTextColor">@color/brand_text</item>

        <!-- Material 3 Colors - Navy Blue, Purple, White -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/brand_surface</item>
        <item name="colorOnSurface">@color/brand_text</item>
    </style>

    <style name="Theme.AIBackgroundRemover.NoActionBar" parent="Theme.AIBackgroundRemover" />
</resources>
