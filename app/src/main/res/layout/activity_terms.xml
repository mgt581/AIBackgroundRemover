<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_terms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms of Service"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_terms_title">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Acceptance of Terms\nBy using AI Background Remover, you agree to these terms.\n\n2. Description of Service\nWe provide AI-powered background removal services.\n\n3. User Conduct\nYou agree not to use the service for any illegal purposes.\n\n4. Privacy Policy\nYour use of the service is also governed by our Privacy Policy.\n\n5. Termination\nWe reserve the right to terminate your access for any reason.\n\n6. Changes to Terms\nWe may update these terms at any time." />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>