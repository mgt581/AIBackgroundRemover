<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_title_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_photo_studio"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/footer_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textColor="@color/brand_light_blue"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/tv_title_main"
                app:layout_constraintStart_toStartOf="@id/tv_title_main" />

            <!-- Action Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/brand_surface"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/brand_border"
                app:layout_constraintTop_toBottomOf="@id/footer_privacy">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload a photo to begin."
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginBottom="20dp"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/btn_choose_photo"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/choose_from_gallery"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/brand_primary"
                        app:cornerRadius="28dp" />

                    <Button
                        android:id="@+id/btn_remove_bg"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="Remove Background"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/brand_primary"
                        android:visibility="gone"
                        app:cornerRadius="28dp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Preview Area -->
            <FrameLayout
                android:id="@+id/fl_preview_container"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_transparent_checkerboard"
                app:layout_constraintTop_toBottomOf="@id/card_actions">

                <ImageView
                    android:id="@+id/iv_main_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:contentDescription="Image preview" />

                <ProgressBar
                    android:id="@+id/pb_processing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:id="@+id/ll_nav_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/fl_preview_container">

                <Button
                    android:id="@+id/btn_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="My Gallery"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@color/brand_primary"
                    app:cornerRadius="12dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_auth_action"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="My Account"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@color/brand_primary"
                    app:cornerRadius="12dp"
                    tools:ignore="HardcodedText" />

                <!-- Results Actions -->
                <LinearLayout
                    android:id="@+id/ll_image_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_save_fixed"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:text="Save to App Gallery"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/brand_primary"
                        app:cornerRadius="12dp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_download_device"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Save to Device"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:backgroundTint="@color/brand_light_blue"
                    app:cornerRadius="12dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_auth_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="@color/brand_text_secondary"
                    android:textSize="12sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <!-- Hidden Views -->
            <View android:id="@+id/btn_header_settings" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="ContentDescription"/>
            <View android:id="@+id/btn_whatsapp" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="ContentDescription"/>
            <View android:id="@+id/btn_tiktok" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="ContentDescription"/>
            <View android:id="@+id/btn_facebook" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="ContentDescription"/>
            <View android:id="@+id/btn_share" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="ContentDescription"/>
            <View android:id="@+id/footer_gallery" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="ContentDescription"/>
            <View android:id="@+id/footer_contact" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="ContentDescription"/>
            <View android:id="@+id/footer_settings" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="ContentDescription"/>
            <View android:id="@+id/footer_terms" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" tools:ignore="ContentDescription"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
