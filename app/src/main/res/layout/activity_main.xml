<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <!-- Header Section -->
    <HorizontalScrollView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_surface"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_auth_action"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/brand_primary"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_up"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/brand_primary"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_gallery"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/brand_primary"
                android:text="@string/gallery"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_header_settings"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/brand_primary"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/footer_links"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_auth_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/not_signed_in"
                android:textColor="@color/brand_text_secondary"
                android:textSize="12sp" />

            <!-- Main Interactive Area -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/main_card"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/brand_surface"
                app:cardCornerRadius="24dp"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/checkerboard_background">

                    <!-- Initial State: Prominent Choose Button -->
                    <LinearLayout
                        android:id="@+id/layout_home_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="32dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:contentDescription="@string/gallery"
                            android:src="@android:drawable/ic_menu_gallery"
                            app:tint="@color/brand_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/ai_background_remover"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_choose_photo_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:backgroundTint="@color/brand_primary"
                            android:paddingStart="32dp"
                            android:paddingEnd="32dp"
                            android:text="@string/choose_photo"
                            android:textColor="@color/white"
                            app:cornerRadius="24dp" />
                    </LinearLayout>

                    <!-- Preview State -->
                    <ImageView
                        android:id="@+id/iv_main_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/preview"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <!-- WebView for Backgrounds (Hidden by default) -->
                    <WebView
                        android:id="@+id/main_webview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/pb_processing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Panel (Visible when photo is chosen/processed) -->
            <LinearLayout
                android:id="@+id/layout_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_remove_bg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/status_green"
                    android:text="@string/remove_background"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp"
                    app:icon="@android:drawable/ic_menu_crop" />

                <GridLayout
                    android:id="@+id/grid_post_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:columnCount="2"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_change_background"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="@string/change_background"
                        android:textSize="12sp"
                        app:cornerRadius="16dp"
                        app:icon="@android:drawable/ic_menu_gallery" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_fixed"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="@string/save_to_gallery"
                        android:textSize="12sp"
                        app:cornerRadius="16dp"
                        app:icon="@android:drawable/ic_menu_save" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_download_device"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_columnSpan="2"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/brand_accent"
                        android:text="@string/download_to_device"
                        android:textColor="@color/white"
                        app:cornerRadius="16dp"
                        app:icon="@android:drawable/stat_sys_download"
                        app:iconTint="@color/white" />
                </GridLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reset"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="@string/back"
                    android:textColor="@color/brand_text_secondary" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/when_signed_in_your_downloaded_images_are_also_saved_to_your_gallery_and_downloaded_to_your_device"
                android:textColor="@color/brand_text_secondary"
                android:textSize="11sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Footer Section -->
    <LinearLayout
        android:id="@+id/footer_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/brand_surface"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView android:id="@+id/btn_whatsapp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/whatsapp" android:textColor="@color/brand_light_blue" android:padding="8dp"/>
            <TextView android:id="@+id/btn_tiktok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tiktok" android:textColor="@color/brand_light_blue" android:padding="8dp"/>
            <TextView android:id="@+id/btn_facebook" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/facebook" android:textColor="@color/brand_light_blue" android:padding="8dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:text="@string/footer_ownership"
            android:textColor="@color/brand_text_secondary"
            android:textSize="11sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
