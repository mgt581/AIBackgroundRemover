<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <!-- HEADER -->
    <HorizontalScrollView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_surface"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_auth_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/brand_primary"
                style="@style/Widget.Material3.Button"
                android:textSize="12sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/brand_primary"
                style="@style/Widget.Material3.Button"
                android:textSize="12sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/gallery"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/brand_primary"
                style="@style/Widget.Material3.Button"
                android:textSize="12sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_header_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/brand_primary"
                style="@style/Widget.Material3.Button"
                android:textSize="12sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Upload a photo to begin."
                android:textColor="@color/brand_text_secondary"
                android:textSize="16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_choose_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/brand_primary"
                android:padding="14dp"
                app:cornerRadius="24dp"
                android:text="@string/choose_photo"
                android:textColor="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_remove_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/brand_surface"
                app:strokeColor="@color/brand_primary"
                app:strokeWidth="1dp"
                android:padding="14dp"
                app:cornerRadius="24dp"
                android:text="@string/remove_background"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/brand_surface"
                app:strokeColor="@color/brand_primary"
                app:strokeWidth="1dp"
                android:padding="14dp"
                app:cornerRadius="24dp"
                android:text="@string/change_background"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/checkerboard_background"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_main_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/preview"
                    android:scaleType="fitCenter" />

                <ProgressBar
                    android:id="@+id/pb_processing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_fixed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/brand_primary"
                android:padding="14dp"
                app:cornerRadius="24dp"
                android:text="@string/save_to_gallery"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_download_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/brand_accent"
                android:padding="14dp"
                app:cornerRadius="24dp"
                android:text="@string/download_to_device"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="When signed in, your downloaded images are also saved to your gallery and downloaded to your device."
                android:gravity="center"
                android:textColor="@color/brand_text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>