<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background"
    tools:ignore="MergeRootFrame">

    <HorizontalScrollView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_surface"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_auth_action"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/brand_primary"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                tools:ignore="VisualLintButtonSize,TextContrastCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_up"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/brand_primary"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                tools:ignore="VisualLintButtonSize,TextContrastCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_gallery"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/brand_primary"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/gallery"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                tools:ignore="VisualLintButtonSize,TextContrastCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_header_settings"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/brand_primary"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                tools:ignore="VisualLintButtonSize,TextContrastCheck" />

        </LinearLayout>
    </HorizontalScrollView>

    <WebView
        android:id="@+id/backgroundWebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer_links" />

    <!-- Hidden elements to maintain compatibility with existing code if needed, but they won't be visible -->
    <View android:id="@+id/pb_processing" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
    <View android:id="@+id/btn_choose_photo" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
    <View android:id="@+id/btn_remove_bg" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
    <View android:id="@+id/btn_change_background" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
    <View android:id="@+id/btn_save_fixed" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
    <View android:id="@+id/btn_download_device" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
    <View android:id="@+id/tv_auth_status" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />
    <View android:id="@+id/iv_main_preview_container" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/footer_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/brand_surface"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whatsapp"
                android:textColor="@color/brand_light_blue"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/btn_tiktok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiktok"
                android:textColor="@color/brand_light_blue"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/btn_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook"
                android:textColor="@color/brand_light_blue"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/footer_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textColor="@color/brand_text_secondary"
                android:textSize="12sp"
                tools:ignore="SmallSp"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/divider"
                android:textColor="@color/brand_text_secondary"
                android:textSize="12sp"
                tools:ignore="SmallSp" />
            <TextView
                android:id="@+id/footer_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_service"
                android:textColor="@color/brand_text_secondary"
                android:textSize="12sp"
                tools:ignore="SmallSp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/footer_ownership"
            android:textColor="@color/brand_text_secondary"
            android:textSize="11sp"
            tools:ignore="SmallSp" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/save"
        android:visibility="gone"
        app:icon="@android:drawable/ic_menu_save"
        app:layout_constraintBottom_toTopOf="@id/footer_links"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/save_image_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>
