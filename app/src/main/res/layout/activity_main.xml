<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <!-- Header Section (Fixed at top) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/brand_background"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/ai_photo_studio_app"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_auth_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@string/sign_in_now"
                    android:textColor="@color/status_red"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:importantForAccessibility="no">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_gallery"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="6dp"
                        android:text="@string/gallery"
                        android:backgroundTint="@color/brand_primary"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        tools:ignore="VisualLintButtonSize"/>

                    <Button
                        android:id="@+id/btn_header_settings"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="6dp"
                        android:text="@string/settings"
                        android:backgroundTint="@color/brand_primary"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        tools:ignore="VisualLintButtonSize"/>

                    <Button
                        android:id="@+id/btn_auth_action"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="6dp"
                        android:text="@string/sign_in"
                        android:backgroundTint="@color/brand_primary"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        tools:ignore="VisualLintButtonSize"/>

                    <Button
                        android:id="@+id/btn_sign_up"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/sign_up"
                        android:backgroundTint="@color/brand_primary"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        tools:ignore="VisualLintButtonSize"/>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- WebView fills the middle -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintBottom_toTopOf="@id/footer_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer Section (Scrollable if needed, at the bottom) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/footer_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/footer_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brand_surface"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btn_day_pass"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/day_pass"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="8dp"
                    tools:ignore="VisualLintButtonSize"/>

                <Button
                    android:id="@+id/btn_monthly"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1.2"
                    android:text="@string/monthly_pass"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="8dp"
                    tools:ignore="VisualLintButtonSize"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_yearly"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:backgroundTint="@color/brand_light_blue"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/yearly_pass"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                tools:ignore="VisualLintButtonSize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_ownership"
                android:textColor="@color/brand_text_secondary"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/save_to_gallery"
        android:textColor="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/brand_primary"
        app:icon="@android:drawable/ic_menu_save"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/footer_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        tools:ignore="AccessibilityClassName" />

</androidx.constraintlayout.widget.ConstraintLayout>
