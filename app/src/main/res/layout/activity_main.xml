<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/brand_surface"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">
            <TextView
                android:id="@+id/tv_auth_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_signed_in"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/btn_auth_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textColor="@color/brand_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textColor="@color/brand_primary"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/btn_header_settings"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@android:drawable/ic_menu_manage"
            android:drawableTint="@color/white"
            android:contentDescription="@string/settings" />
    </LinearLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_background_remover"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <FrameLayout
                android:id="@+id/iv_main_preview_container"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/brand_surface"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_main_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/preview" />

                <ProgressBar
                    android:id="@+id/pb_processing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <Button
                android:id="@+id/btn_choose_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_photo"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/brand_primary"
                android:textColor="@color/white"
                android:padding="12dp" />

            <Button
                android:id="@+id/btn_remove_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/remove_background"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/status_green"
                android:textColor="@color/white"
                android:padding="12dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_post_process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_change_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_background"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brand_accent"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_choose_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_background"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brand_accent"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_save_fixed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save_to_gallery"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_download_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/download_to_device"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brand_surface"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp">
                <TextView android:id="@+id/btn_whatsapp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/whatsapp" android:textColor="@color/whatsapp_green" android:padding="8dp"/>
                <TextView android:id="@+id/btn_tiktok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tiktok" android:textColor="@color/white" android:padding="8dp"/>
                <TextView android:id="@+id/btn_facebook" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/facebook" android:textColor="@color/facebook_blue" android:padding="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/save"
        android:textColor="@color/white"
        android:backgroundTint="@color/brand_primary"
        app:icon="@android:drawable/ic_menu_save"
        app:iconTint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FOOTER -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/brand_surface"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/footer_gallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <ImageView android:layout_width="24dp" android:layout_height="24dp"
                    android:contentDescription="@string/gallery"
                    android:src="@android:drawable/ic_menu_gallery" app:tint="@color/white"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gallery" android:textColor="@color/white" android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/footer_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <ImageView android:layout_width="24dp" android:layout_height="24dp"
                    android:contentDescription="@string/settings"
                    android:src="@android:drawable/ic_menu_manage" app:tint="@color/white"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/settings" android:textColor="@color/white" android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/footer_privacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_info_details" app:tint="@color/white"
                    android:contentDescription="@string/privacy" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/privacy" android:textColor="@color/white" android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/footer_terms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_help" app:tint="@color/white"
                    android:contentDescription="@string/terms" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/terms" android:textColor="@color/white" android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/footer_ownership"
            android:textColor="@color/brand_text_secondary"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingBottom="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>