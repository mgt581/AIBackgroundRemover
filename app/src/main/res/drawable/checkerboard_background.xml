<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
        </shape>
    </item>
    <!-- Vector drawables cannot be used as a source for <bitmap> in XML if you want tiling.
         To fix the render error, we use the drawable directly.
         For proper tiling, a PNG resource should be used instead. -->
    <item android:drawable="@drawable/checkerboard_tile" />
</layer-list>