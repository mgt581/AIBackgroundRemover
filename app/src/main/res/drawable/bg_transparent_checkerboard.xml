<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border and rounded corners -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#CCCCCC" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Tiled Checkerboard Pattern -->
    <!-- Note: For best results on all Android versions, a small PNG tile is recommended.
         Using a tiled bitmap here will create the checkerboard effect. -->
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <bitmap
            android:src="@drawable/ic_checkerboard_tile"
            android:tileMode="repeat"
            android:dither="true" />
    </item>
</layer-list>
