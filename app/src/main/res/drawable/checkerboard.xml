<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
        </shape>
    </item>
    <!-- Vector drawables cannot be used as a source for <bitmap>.
         To fix the render error, we use the drawable directly in an <item>.
         Note: This will not tile the vector; for tiling, a PNG should be used. -->
    <item android:drawable="@drawable/checkerboard_tile" />
</layer-list>